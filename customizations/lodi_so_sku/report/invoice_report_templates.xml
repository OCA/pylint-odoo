<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_invoice_document_inherit_lodi_so_sku" inherit_id="account.report_invoice_document">
        <xpath expr="//th[@name='th_description']" position="after">
            <th name="th_product_sku" class="text-left">SKU</th>
        </xpath>
        <xpath expr="//td[@name='account_invoice_line_name']" position="after">
            <td>
                <span t-esc="line.product_id.get_sku_by_partner_id(partner_id).sku or ''"/>
            </td>
        </xpath>

        <xpath expr="//td[@name='account_invoice_line_name']" position="replace">
            <td name="account_invoice_line_name">
                <span t-esc="line.product_id.get_sku_by_partner_id(o.partner_id.id).internal_product_name or line.name"/>
            </td>
        </xpath>
    </template>
</odoo>
