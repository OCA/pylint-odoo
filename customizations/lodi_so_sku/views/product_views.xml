<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_normal_form_view_inherit_lodi_so_sku" model="ir.ui.view">
        <field name="name">product.normal.form.view.inherit.lodi.so.sku</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Product SKUs" name="product_sku">
                    <group>
                        <field name="product_partner_sku_ids" editable="top" create="1" delete="1" multi_edit="1"
                               nolabel="1" attrs="{'readonly': False}"
                               context="{'default_product_id': active_id}">
                            <tree editable="top" create="1" delete="1" multi_edit="1">
                                <field name="sku"/>
                                <field name="internal_product_name"/>
                                <field name="partner_id"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record id="product_normal_form_view_inherit_lodi_so_sku" model="ir.ui.view">
        <field name="name">product.normal.form.view.inherit.lodi.so.sku</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Product SKUs" name="product_sku">
                    <group>
                        <field name="product_partner_sku_ids" editable="top" create="1" delete="1" multi_edit="1"
                               nolabel="1" attrs="{'readonly': False}"
                               domain="[('product_id', '=', active_id)]"
                               context="{'default_product_id': active_id}">
                            <tree editable="top" create="1" delete="1" multi_edit="1">
                                <field name="sku"/>
                                <field name="internal_product_name"/>
                                <field name="partner_id"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
