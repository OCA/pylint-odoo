<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="vendor_bill_attachment_wizard_view_form" model="ir.ui.view">
        <field name="name">vendor.bill.attachment.wizard.view.form</field>
        <field name="model">vendor.bill.attachment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="journal_id"/>
                        </group>
                        <group>
                            <field name="account_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="attachment_ids" widget="many2many_binary" string="Attach a file" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button type="object" name="action_process" string="Process" class="oe_highlight"/>
                    <button string="Discard" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="vendor_bill_attachment_wizard_action" model="ir.actions.act_window">
        <field name="name">Import Bills</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vendor.bill.attachment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            parent="account.menu_finance_payables"
            id="vendor_bill_attachment_wizard_menu"
            action="vendor_bill_attachment_wizard_action"
            sequence="1000"/>
</odoo>
