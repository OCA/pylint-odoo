<?xml version='1.0' encoding='UTF-8'?>
<odoo>

  <template id="l10n_mx_edi_addenda_lodi_addenda_mayasa" name="Lodi Addenda Mayasa">
    <grupo:DatosAddendaOrdenCompra
      xmlns:grupo="https://www.mayasa.com.mx/schema/grupo"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="https://www.mayasa.com.mx/schema/grupo https://www.mayasa.com.mx/schema/grupo_2_0.xsd"
      NoVersion="2.0"
      t-att-PedidoOrdenCompra="record.ref">
      <grupo:Detalles>
        <t t-foreach="record.invoice_line_ids" t-as="invoice_line">
          <grupo:Detalle
            t-att-CodigoArticuloProveedor="invoice_line.sku or invoice_line.product_id.default_code"
            t-att-Unidad="invoice_line.product_uom_id.unspsc_code_id.code"
            t-att-Descripcion='invoice_line.internal_product_name or invoice_line.product_id.name'
            t-att-Cantidad='invoice_line.quantity'
            t-att-ValorUnitario='invoice_line.price_unit'
            t-att-Importe='invoice_line.price_subtotal'
            t-att-Descuento='invoice_line.discount' />
        </t>
      </grupo:Detalles>
    </grupo:DatosAddendaOrdenCompra>
  </template>

  <record id="l10n_mx_edi_addenda_lodi_addenda_mayasa" model="ir.ui.view">
    <field name="l10n_mx_edi_addenda_flag">True</field>
  </record>

</odoo>
